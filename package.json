{
    "name": "ciphershare",
    "version": "1.0.0",
    "description": "Secure secret sharing application with dual encryption",
    "type": "module",
    "scripts": {
        "dev": "concurrently \"npm run dev:client\" \"npm run dev:server\"",
        "dev:client": "vite",
        "dev:server": "tsx watch server/index.ts",
        "build": "tsc && vite build",
        "preview": "vite preview",
        "test": "npm-run-all --parallel test:unit test:frontend",
        "test:watch": "npm run test:frontend -- --watch",
        "test:unit": "jest",
        "test:frontend": "vitest"
    },
    "dependencies": {
        "@sendgrid/mail": "^8.1.0",
        "cors": "^2.8.5",
        "dotenv": "^16.3.1",
        "express": "^4.18.2",
        "redis": "^4.6.11",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "react-router-dom": "^6.20.0"
    },
    "devDependencies": {
        "@testing-library/jest-dom": "^6.1.5",
        "@testing-library/react": "^14.1.2",
        "@testing-library/user-event": "^14.5.1",
        "@types/cors": "^2.8.17",
        "@types/express": "^4.17.21",
        "@types/jest": "^29.5.11",
        "@types/node": "^20.10.5",
        "@types/react": "^18.2.43",
        "@types/react-dom": "^18.2.17",
        "@vitejs/plugin-react": "^4.2.1",
        "autoprefixer": "^10.4.16",
        "concurrently": "^8.2.2",
        "jest": "^29.7.0",
        "jest-environment-jsdom": "^29.7.0",
        "postcss": "^8.4.32",
        "tailwindcss": "^3.3.6",
        "ts-jest": "^29.1.1",
        "vitest": "^0.34.0",
        "npm-run-all": "^4.1.5",
        "ts-node": "^10.9.2",
        "tsx": "^4.7.0",
        "typescript": "^5.3.3",
        "vite": "^5.0.8"
    }
}