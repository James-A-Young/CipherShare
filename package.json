{
    "name": "ciphershare",
    "version": "1.0.0",
    "description": "Secure secret sharing application with dual encryption",
    "type": "module",
    "scripts": {
        "dev": "concurrently \"npm run dev:client\" \"npm run dev:server\"",
        "dev:client": "vite",
        "dev:server": "tsx watch server/index.ts",
        "build": "tsc && vite build",
        "preview": "vite preview",
        "test": "npm-run-all --parallel test:unit test:frontend",
        "test:watch": "npm run test:frontend -- --watch",
        "test:unit": "jest",
        "test:frontend": "vitest"
    },
    "engines": {
        "node": ">=24.0.0",
        "npm": ">=10.0.0"
    },
    "dependencies": {
        "@sendgrid/mail": "^8.1.4",
        "cors": "^2.8.5",
        "dotenv": "^16.4.7",
        "express": "^4.21.2",
        "react": "^18.3.1",
        "react-dom": "^18.3.1",
        "react-router-dom": "^7.1.1",
        "redis": "^4.7.0"
    },
    "devDependencies": {
        "@testing-library/jest-dom": "^6.6.3",
        "@testing-library/react": "^16.1.0",
        "@testing-library/user-event": "^14.5.2",
        "@types/cors": "^2.8.17",
        "@types/express": "^5.0.0",
        "@types/jest": "^29.5.14",
        "@types/node": "^22.10.2",
        "@types/react": "^18.3.18",
        "@types/react-dom": "^18.3.5",
        "@vitejs/plugin-react": "^4.3.4",
        "autoprefixer": "^10.4.20",
        "concurrently": "^9.1.0",
        "jest": "^29.7.0",
        "jest-environment-jsdom": "^29.7.0",
        "npm-run-all": "^4.1.5",
        "postcss": "^8.4.49",
        "tailwindcss": "^4.1.17",
        "ts-jest": "^29.2.5",
        "ts-node": "^10.9.2",
        "tsx": "^4.19.2",
        "typescript": "^5.7.2",
        "vite": "^6.0.5",
        "vitest": "^4.0.10"
    }
}
