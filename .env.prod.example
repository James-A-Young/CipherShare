# ============================================
# Production Environment Configuration
# ============================================
# Copy this file to .env.prod and fill in your values
# DO NOT commit .env.prod to version control

# ============================================
# Redis Configuration
# ============================================
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=your_secure_redis_password_here
# External port mapping (default: 6379)
REDIS_EXTERNAL_PORT=6379

# ============================================
# System Encryption Key
# ============================================
# CRITICAL: Generate a secure 64-character hex string (32 bytes)
# Generate with: openssl rand -hex 32
SYSTEM_SECRET_KEY=REPLACE_WITH_64_HEX_CHARACTERS

# ============================================
# Email Provider Configuration
# ============================================
# Options: "sendgrid" or "mailgun"
EMAIL_PROVIDER=sendgrid
EMAIL_FROM=noreply@yourdomain.com

# SendGrid Configuration (if EMAIL_PROVIDER=sendgrid)
SENDGRID_API_KEY=your_sendgrid_api_key

# Mailgun Configuration (if EMAIL_PROVIDER=mailgun)
MAILGUN_API_KEY=your_mailgun_api_key
MAILGUN_DOMAIN=yourdomain.com

# ============================================
# Application Configuration
# ============================================
# Port the app listens on internally (should match Dockerfile EXPOSE)
PORT=3001

# External port mapping (default: 3001)
APP_PORT=3001

# Frontend URL (for CORS and email links)
CLIENT_URL=https://yourdomain.com

# ============================================
# Node Environment
# ============================================
NODE_ENV=production
